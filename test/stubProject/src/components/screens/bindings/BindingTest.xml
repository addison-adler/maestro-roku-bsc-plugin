<?xml version='1.0' encoding='UTF-8'?>
<component
    name='BindingTest'
    extends='Group'>
  <interface>
    <field
        id='VMClass'
        type='string'
        value='BindingTestVM' />
    <field
        id='target'
        type='string'
        alias='text.text' />
  </interface>

  <children>
    <Label
        id='titleLabel'
        text='{{titleText}}' />

    <Button
        id='button'
        text='click me'
        focusedIndex='{{focusedIndex;fireOnset;once}(onClick(value);fireOnSet;once;transform=myFunc)}' />


  </children>

</component>
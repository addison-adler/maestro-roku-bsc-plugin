{
  "name": "maestro-vsc-extension-plugin",
  "version": "0.1.0",
  "description": "Visual studio plugin for maestro brightscript development",
  "files": [
    "dist/**/!(*.spec.*)*"
  ],
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "adm-zip": "^0.4.13",
    "commander": "latest",
    "compare-directories": "^0.1.0",
    "debounce-promise": "^3.1.2",
    "debug": "latest",
    "dir-compare": "^1.4.0",
    "fs-extra": "^5.0.0",
    "glob-all": "^3.1.0",
    "lodash": "latest",
    "make-dir": "^3.0.0",
    "os": "^0.1.1",
    "replace-ext": "^1.0.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.4",
    "roku-deploy": "^3.2.3",
    "sax": "^1.2.4",
    "splice-string": "^2.0.0",
    "vscode-languageserver": "^6.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-subset": "^1.3.1",
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.119",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.15",
    "@types/replace-ext": "0.0.27",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.6.1",
    "brighterscript": "^0.15.0",
    "chai": "^4.1.2",
    "chai-subset": "^1.6.0",
    "codecov": "^3.1.0",
    "gulp": "^4.0.2",
    "mocha": "^5.1.1",
    "ncp": "^2.0.0",
    "nyc": "^13.1.0",
    "source-map": "^0.7.3",
    "source-map-resolve": "^0.6.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-origin-ordered-imports-rule": "^1.1.2",
    "typescript": "^3.2.2"
  },
  "scripts": {
    "clean": "rm -rf ./dist && mkdir dist",
    "compile": "npm run clean && tsc -p .",
    "prepublishOnly": "npm run build",
    "tslint": "tslint ./src/**/*.ts",
    "build": "npm run compile",
    "cli": "npm run compile && npm unlink && npm link",
    "test": "npm run build && nyc mocha src/**/*.spec.ts --full-trace --bail",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "publish-npm": "npm run test && npm publish",
    "publish-npm:beta": "npm run test && npm publish --tag=beta"
  },
  "preferGlobal": true,
  "bin": {
    "maestro-cli": "dist/plugin.js"
  },
  "keywords": [
    "brightscript",
    "scenegraph",
    "roku",
    "maestro",
    "britherscript"
  ],
  "author": "George Cook",
  "license": "ISC",
  "watch": {
    "test": {
      "extensions": "ts",
      "patterns": [
        "src"
      ]
    }
  },
  "nyc": {
    "include": [
      "src/**/!(*.spec).ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": true,
    "lines": 5,
    "statements": 5,
    "functions": 5,
    "branches": 5
  }
}

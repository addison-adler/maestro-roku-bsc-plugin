{
  "name": "maeestro-roku-bsc-plugin",
  "version": "0.1.0",
  "description": "Visual studio plugin for maestro brightscript development",
  "files": [
    "dist/**/!(*.spec.*)*",
    "dist/**/*.brs"
  ],
  "main": "dist/plugin.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "source-map": "^0.7.3",
    "vscode-languageserver": "~6.1.1",
    "vscode-languageserver-protocol": "~3.15.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.16",
    "brighterscript": "^0.23.1",
    "chai": "^4.2.0",
    "fs-extra": "^9.0.1",
    "lodash": "^4.17.20",
    "mocha": "^8.1.3",
    "sax": "^1.2.4",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "clean": "rm -rf ./dist && mkdir dist",
    "compile": "npm run clean && tsc -p .",
    "prepublishOnly": "npm run build",
    "tslint": "tslint ./src/**/*.ts",
    "build": "npm run compile && cp -r src/lib/framework ./dist/lib/framework",
    "cli": "npm run compile && npm unlink && npm link",
    "test": "npm run build && nyc mocha src/**/*.spec.ts --full-trace --bail",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "publish-npm": "npm run test && npm publish",
    "publish-npm:beta": "npm run test && npm publish --tag=beta"
  },
  "preferGlobal": true,
  "bin": {
    "maestro-cli": "dist/maestro-plugin.js"
  },
  "keywords": [
    "brightscript",
    "scenegraph",
    "roku",
    "maestro",
    "brighterscript",
    "bsc"
  ],
  "author": "George Cook",
  "license": "ISC",
  "watch": {
    "test": {
      "extensions": "ts",
      "patterns": [
        "src"
      ]
    }
  },
  "nyc": {
    "include": [
      "src/**/!(*.spec).ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": true,
    "lines": 5,
    "statements": 5,
    "functions": 5,
    "branches": 5
  }
}

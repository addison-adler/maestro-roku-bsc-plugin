{
    "name": "maestro-roku-bsc-plugin",
    "version": "0.5.0",
    "description": "Visual studio plugin for maestro brightscript development",
    "files": [
        "dist/**/!(*.spec.*)*",
        "dist/**/*.brs"
    ],
    "main": "dist/plugin.js",
    "directories": {
        "test": "test"
    },
    "dependencies": {
        "debounce": "^1.2.0",
        "roku-deploy": "^3.2.4",
        "source-map": "^0.7.3",
        "ts-node": "^9.1.1",
        "vscode-languageserver": "~6.1.1",
        "vscode-languageserver-protocol": "~3.15.3"
    },
    "devDependencies": {
        "@types/chai": "^4.2.12",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.14.16",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "@typescript-eslint/parser": "^4.4.1",
        "auto-changelog": "^2.2.1",
        "brighterscript": "^0.33.0",
        "chai": "^4.2.0",
        "eslint": "^7.11.0",
        "eslint-plugin-github": "^4.1.1",
        "eslint-plugin-no-only-tests": "^2.4.0",
        "fs-extra": "^9.1.0",
        "lodash": "^4.17.20",
        "minimatch": "^3.0.4",
        "mocha": "^8.1.3",
        "nyc": "^15.1.0",
        "sax": "^1.2.4",
        "typescript": "^4.1.3"
    },
    "preferGlobal": true,
    "keywords": [
        "brightscript",
        "scenegraph",
        "roku",
        "maestro",
        "brighterscript",
        "bsc"
    ],
    "author": "George Cook",
    "license": "ISC",
    "watch": {
        "test": {
            "extensions": "ts",
            "patterns": [
                "src"
            ]
        }
    },
    "nyc": {
        "include": [
            "src/**/!(*.spec).ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "sourceMap": true,
        "instrument": true,
        "check-coverage": true,
        "lines": 5,
        "statements": 5,
        "functions": 5,
        "branches": 5
    },
    "mocha": {
        "spec": "src/**/*.spec.ts",
        "fullTrace": true,
        "require": [
            "source-map-support/register",
            "ts-node/register"
        ]
    },
    "auto-changelog": {
        "template": "keepachangelog",
        "commitLimit": false,
        "tag-pattern": ".+"
    },
    "scripts": {
        "clean": "rm -rf ./dist && mkdir dist",
        "compile": "npm run clean && tsc -p .",
        "prepublishOnly": "npm run build",
        "build": "npm run compile && cp -r src/lib/framework ./dist/lib/framework",
        "lint": "eslint \"src/**/*.ts\"",
        "cli": "npm run compile && npm unlink && npm link",
        "test": "npm run build && nyc mocha src/**/*.spec.ts --full-trace --bail",
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
        "publish-npm": "npm run test && npm publish",
        "publish-npm:beta": "npm run test && npm publish --tag=beta",
        "local": "ts-node scripts/install-local.js",
        "remote": "ts-node scripts/install-npm.js",
        "changelog": "npx auto-changelog"
    }
}

<?xml version='1.0' encoding='UTF-8' ?>
<component
    name='BindingTestExtended'
    extends='BindingTest'>
  <interface>
  </interface>

  <children>
    <!--One way binding from vm field "oneWaySource"-->
    <Label
        id='titleLabelExtended'
        text='{{vm.titleTextExtended}}' />

    <!--One way to vm function  "oneWaySource"-->
    <Button
        id='buttonExtended'
        text='click me'
        clicked='{(vm.onClick())}' />

    <!--Two Way binding "twoWay"-->
    <InputBox
        id='nameInputExtended'
        text='{{vm.name, mode=TwoWay}}' />

    <!--Two Way binding "twoWay" - alternate syntax-->
    <InputBox
        id='nameInput2Extended'
        text='{[vm.name]}}' />

    <!--Transform function -->
    <InputBox
        id='nameInputTwoWayExtended'
        text='{{vm.name}}' />
    <Group>
      <Group
          id='innerGroupExtended'
          visible='{{vm.isGroupVisible, transform=OM_transform_invertBoolean}}'>

        <!-- One Way from node field to observer field -->
        <RowList
            id='rowListExtended'
            focusedIndex='{{vm.focusedIndex, mode=oneWayTarget}}' />

        <!-- One Way from node field to observer field "oneWayTarget"
             - alternate syntax -->
        <RowList
            id='rowList2Extended'
            clicked='{(vm.onItemClicked)}' />

        <!--Multiple bindings -->
        <RowList
            id='rowListExtended2'
            visible='{{vm.isGroupVisible, transform=OM_transform_invertBoolean}}'
            clicked='{{vm.onItemClicked}}'
            jumpToIndex='{{vm.jumpToIndex, mode=oneWaySource}}'
            focusedIndex='{{vm.focusedIndex, mode=oneWayTarget}}'
            selectedIndex='{{vm.selectedIndex, mode=twoWay, isSettingInitialValue=false}}' />
      </Group>
    </Group>

  </children>

</component>